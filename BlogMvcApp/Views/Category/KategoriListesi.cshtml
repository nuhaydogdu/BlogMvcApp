@model IEnumerable<BlogMvcApp.Models.Category>

<div class="well">
    <h4> Blog Categories</h4>
    <div class="row">

        @foreach (var item in Model)
        {
            <div class="col-lg-6">
                <ul class="list-unstyled">
                    <li>
                        <a href="/Blog/List/@item.Id">@item.KatagoriAdi</a>        
                         @*Oluşan linklere tıklanıldığında BlogController içerisindeki list Actionuna yönlendiriliyor. Ve List sayfasına yönlendirilirkende her bir linkinin CategoryId'si sayfaya routing value olarak gönderilecek*@
                    </li>
                </ul>
            </div>
        }
    </div>
</div>
